<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/_head') %> 
    <body>
      <div class="ui left demo vertical inverted thin sidebar labeled icon menu">
        <a class="item" href="/assignments">
            My Assignments
          </a>
          <a class="item" href="/assignments/new">
            Create Assignment
          </a>
          <a class="item" href="/submissions/new">
            Create Submission
          </a>
          <a class="item" href="/logout">
            Logout
          </a>
      </div>
        <div class="pusher">
            <header>
                <h1 class="ui header">First header</h1>
                <button class="ui button toggler">Menu</button>
            </header>        
           <h2 class="ui header">Assignment</h2> 
           <div class="ui cards">
                <div class="card">
                  <div class="content">
                    <div class="ui top attached label"><%= assignment.dueDate %></div>
                    <div class="header"><%= assignment.name %></div>
                    <div class="description">
                      <%= assignment.content %>
                    </div>
                  </div>
                </div>
            </div>
            <div class="container">
              <form
              action="/assignments/<%= assignment.id %>/edit"
              method="GET">
                <button class="ui blue button" type="submit">Update Assignment</button>
              </form>
              <form
              action="/assignments/<%= assignment.id %>?_method=DELETE"
              method="POST">
                <button class="ui red button" type="submit">Delete Assignment</button>
              </form>
            </div>    
            <h2 class="ui header">Submissions</h2>
            <% submissions.forEach(submission => { %>
              <div class="ui cards">   
                <div class="card">
                  <div class="content">
                    <div class="ui top attached label">HTML</div>
                    <div class="header"><%= submission.studentName %></div>
                    <div class="description">
                      <%= submission.submissionDate %>
                    </div>
                    <div class="description">
                      <%= submission.file %>
                    </div>
                  </div>
                  <div class="ui bottom attached button">
                    <i class="add icon"></i>
                    <a href="/submissions/<% submission.id %>">View Submission</a>
                  </div>
                </div>
            <% }) %> 
            <div class="ui cards">   
                <div class="card">
                  <div class="content">
                    <div class="ui top attached label">HTML</div>
                    <div class="header">Submission 1</div>
                    <div class="description">
                        file here
                    </div>
                  </div>
                  <div class="ui bottom attached button">
                    <i class="add icon"></i>
                    View Submission
                  </div>
                </div>
                <div class="card">
                    <div class="content">
                      <div class="ui top attached label">HTML</div>
                      <div class="header">Submission 1</div>
                      <div class="description">
                          file here
                      </div>
                    </div>
                    <div class="ui bottom attached button">
                      <i class="add icon"></i>
                      View Submission
                    </div>
                  </div>
        </div>
    </body>
</html>