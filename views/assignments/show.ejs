<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/_head') %> 
    <body>
      <div class="ui left demo vertical inverted thin sidebar labeled icon menu">
        <a class="item" href="/assignments">
            My Assignments
          </a>
          <a class="item" href="/assignments/new">
            Create Assignment
          </a>
          <a class="item" href="/submissions/new">
            Create Submission
          </a>
          <a class="item" href="/logout">
            Logout
          </a>
      </div>
        <div class="pusher">
          <%- include('../partials/_header') %>
          <main class="show">
          <section class="container">    
           <h2 class="ui header">Assignment</h2> 
           <div class="ui cards">
                <div id="assignment-show" class="card">
                  <div class="content">
                    <div class="ui top attached label"><%= assignment.dueDate %></div>
                    <div class="header"><%= assignment.name %></div>
                    <div class="description">
                      <%= assignment.content %>
                    </div>
                  </div>
                </div>
            </div>
            <div class="btn-flex container">
              <form
              action="/assignments/<%= assignment.id %>/edit"
              method="GET">
                <button class="ui blue button" type="submit">Update</button>
              </form>
              <form
              action="/assignments/<%= assignment.id %>?_method=DELETE"
              method="POST">
                <button class="ui red button" type="submit">Delete</button>
              </form>
            </div>
            </section>
            <section class="container">   
            <h2 class="ui header">Submissions</h2>
            <form
            action="/submissions/new"
            method="GET">
              <button id="bottom-btn" class="ui teal button" type="submit">Create Submission</button>
            </form>
            <div class="ui cards">
            <% for(let i = 0; i < submissions.length; i++){ %>
              <% const submission = submissions[i] %>
                <div class="card">
                  <div class="content">
                    <div class="ui top attached label">HTML</div>
                    <div class="header"><%= submission.studentName %></div>
                    <div class="description">
                      <%= submission.submissionDate %>
                    </div>
                    <div class="description">
                      <a href="<%= submission.file %>">Download Submission File</a>
                    </div>
                  </div>
                  <div class="ui bottom attached button">
                    <i class="add icon"></i>
                    <a href="/submissions/<%= submission.id %>">View Submission</a>
                  </div>
                </div>
            <% } %> 
            </div>
          </section> 
        </main>  
      </div>
    </body>
</html>