<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/_head') %>
    </head>
    <body>
      <div class="ui left demo vertical inverted thin sidebar labeled icon menu">
        <a class="item" href="/assignments">
            My Assignments
          </a>
          <a class="item" href="/assignments/new">
            Create Assignment
          </a>
          <a class="item" href="/submissions/new">
            Create Submission
          </a>
          <a class="item" href="/logout">
            Logout
          </a>
      </div>
        <div class="pusher">
          <%- include('../partials/_header') %> 
                <h3 class="ui header">Create Submission</h3>
                <form class="ui form" action="/submissions" method="POST">
                  <% if (typeof error !== "undefined") { %>
                      <%= error.message %> 
                  <% } %> 
                <div class="field">
                    <label>Student Name</label>
                    <input 
                    type="text"
                    name="studentName"
                    placeholder="Your Name Here">
                </div>
                <div class="field">
                  <label>File Upload</label>
                  <input
                  type="file"
                  name="file"
                  placeholder="File Upload"></input> 
                </div>
                <div class="field">
                  <label>Assignment</label>
                  <select name="assignmentId">
                    <option default>Select your Assignment</option>
                    <% for (let i = 0; i < assignments.length; i++) {%>
                    <% const assignment = assignments[i] %>
                    <option value="<%= assignment._id %>">
                      <%= assignment.name %>
                    </option>
                    <% } %>
                  </select>
                </div>

                <button class="ui teal submit button" type="submit">Submit Assignment</button>
                </form>
    </body>
</html>