<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/_head') %> 
    <body>
      <div class="ui left demo vertical inverted thin sidebar labeled icon menu">
        <%- include('../partials/_sidebar-links') %>
      </div>
        <div class="pusher">
          <%- include('../partials/_header') %>
          <main>
          <section class="container">
            <h2 class="ui header">Your Submission</h2>
            <div class="ui cards">   
                <div class="card">
                  <div class="content">
                    <div class="ui top attached label">Submission Date: <%= submission.submissionDate %></div>
                    <div class="header"><%= submission.studentName %></div>
                    <div class="description">
                      <%= submission.submissionDate %>
                    </div>
                    <div class="description">
                      <a href="<%= submission.file %>">Download Submission File</a>
                    </div>
                  </div>
                </div>
            </div>
            <div class="btn-flex container">
              <form
              action="/submissions/<%= submission.id %>/edit"
              method="GET">
                <button class="ui blue button" type="submit">Update</button>
              </form>
              <form
              action="/submissions/<%= submission.id %>?_method=DELETE"
              method="POST">
                <button class="ui red button" type="submit">Delete</button>
              </form>
            </div>
          </section>
          <section class="container">
            <h2 class="ui header">For This Assignment</h2>
            <div class="ui cards">
              <div class="card">
                <div class="content">
                  <div class="ui top attached label"><%= assignment.dueDate %></div>
                  <div class="header"><%= assignment.name %></div>
                  <div class="description">
                    <%= assignment.content %>
                  </div>
                </div>
                <div class="ui bottom attached button">
                  <i class="add icon"></i>
                  <a href="/assignments/<%= assignment.id %>">View Assignment</a>
                </div>
              </div>
            </div>
          </section>
        </main>
      </div>  
    </body>
</html>   